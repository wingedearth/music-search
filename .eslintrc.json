{
    "parser": "babel-eslint",
    "parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"modules": true
		}
    },
    "env": {
		"es6": true,
		"browser": true,
		"node": true,
		"jest": true
	},
    "extends": "airbnb",
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": [
			"error",
			{
				"tabWidth": 4,
				"useTabs": true,
				"singleQuote": true,
				"printWidth": 120
			}
		],
        "semi": [2, "always"],
        "indent": [2, "tab", { "SwitchCase": 1 }],
        "no-console": 0
    }
}