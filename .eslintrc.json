{
    "parser": "babel-eslint",
    "parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"modules": true
		}
    },
    "env": {
		"es6": true,
		"browser": true,
		"node": true,
		"jest": true
	},
    "extends": ["airbnb", "prettier"],
    "plugins": ["prettier"],
    "rules": {
		"comma-dangle": 0,
		"indent": [2, "tab", { "SwitchCase": 1 }],
    "prettier/prettier": [
			"error",
			{
				"tabWidth": 4,
				"useTabs": true,
				"singleQuote": true,
				"printWidth": 120
			}
		],
		"no-console": 0,
		"no-tabs": 0,
		"semi": [2, "always"]
    }
}