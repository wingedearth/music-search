{
    "parser": "babel-eslint",
    "parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"modules": true
		}
    },
    "env": {
		"es6": true,
		"browser": true,
		"node": true,
		"jest": true
	},
    "extends": ["airbnb", "prettier"],
    "plugins": ["prettier"],
    "rules": {
			"comma-dangle": 0,
			"consistent-return": 0,
			"indent": [2, "tab", { "SwitchCase": 1 }],
			"no-console": 0,
			"no-tabs": 0,
			"no-useless-constructor": 0,
    		"prettier/prettier": [
				"error",
				{
					"tabWidth": 4,
					"useTabs": true,
					"singleQuote": true,
					"printWidth": 120
				}
			],
			"react/jsx-filename-extension": 0,
			"react/jsx-indent": 0,
			"react/jsx-indent-problem": 0,
			"react/jsx-indent-props": 0,
			"react/jsx-one-expression-per-line": 0,
			"react/prefer-stateless-function": 0,
			"semi": [2, "always"]
    }
}